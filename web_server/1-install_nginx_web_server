#!/usr/bin/env bash
# This Bash script configures a new Ubuntu machine to install and set up Nginx.
# Nginx should listen on port 80 and return a page containing "Holberton School" at the root.

# Update package list and install Nginx
apt-get update
apt-get install -y nginx

# Create the directory for HTML files and write the content to index.html
mkdir -p /var/www/html
echo "Holberton School for the win!" > /var/www/html/index.html

# Configure Nginx to serve the content
cat > /etc/nginx/sites-available/default <<EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    root /var/www/html;
    index index.html index.htm;

    location / {
        try_files \$uri \$uri/ =404;
    }
}
EOF

# Restart Nginx
service nginx restart
